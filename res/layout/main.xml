<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" 
        android:layout_height="wrap_content" > 
        <TextView android:text="Namespace" android:layout_width="120px" 
            android:layout_height="wrap_content" />
        <EditText  android:id="@+id/namespace" android:text="ccnx:/ccnfileproxy" 
            android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        <TextView android:text="Directory" android:layout_width="120px" 
            android:layout_height="wrap_content" />
        <EditText  android:id="@+id/directory" android:text="/mnt/sdcard" 
            android:layout_width="300px" android:layout_height="wrap_content"/>
        <Button android:id="@+id/browse" android:text="..."
            android:layout_width="fill_parent" android:layout_height="fill_parent" />
    </LinearLayout>
    
    <TextView  android:id="@+id/message" android:text="This will start a fileproxy to serve files from [directory] at [namespace]"
    	android:layout_width="fill_parent" android:layout_height="100px" android:textSize="8pt"/>
    
    <Button android:id="@+id/start" android:text="Start"
        android:layout_width="fill_parent" android:layout_height="wrap_content" />

</LinearLayout>

